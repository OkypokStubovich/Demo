#include <iostream>
#include <cmath>

using namespace std;

double calculateSeries(int n) {
    double sum = 0;
    double term = -1.0; // Первый член ряда при k=1: (-1)^1 / (1!)^2 = -1
    
    for (int k = 1; k <= n; k++) {
        sum += term;
        // Рекуррентное соотношение для следующего члена:
        term = -term / ((k+1)*(k+1));
    }
    
    return sum;
}

int main() {
    int n;
    cout << "Введите n: ";
    cin >> n;
    
    if (n < 1) {
        cout << "Ошибка: n должно быть положительным" << endl;
        return 1;
    }
    
    cout << "Сумма ряда: " << calculateSeries(n) << endl;
    return 0;
}
