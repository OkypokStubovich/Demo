// Подключаем необходимые библиотеки
#include <iostream>  // Для ввода-вывода (cin, cout)
#include <limits>    // Для numeric_limits (проверка ввода)

using namespace std; // Чтобы не писать std:: перед cin, cout и т.д.

int main() {
    // Объявляем переменные для хранения двух чисел
    double num1, num2;
    // Флаг для проверки правильности ввода
    bool inputValid = false;

    /******************** Ввод первого числа ********************/
    cout << "Введите первое число: ";
    // Цикл будет работать, пока пользователь не введёт корректное число
    while (!inputValid) {
        // Пытаемся считать число
        cin >> num1;
        
        // Если ввод не удался (например, ввели буквы вместо цифр)
        if (cin.fail()) {
            // Сбрасываем флаг ошибки
            cin.clear();
            // Очищаем буфер ввода до конца строки
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            // Просим ввести число снова
            cout << "Ошибка! Введите число: ";
        } else {
            // Если ввод корректен, выходим из цикла
            inputValid = true;
        }
    }

    /******************** Ввод второго числа ********************/
    // Сбрасываем флаг для повторного использования
    inputValid = false;
    cout << "Введите второе число: ";
    // Аналогичная проверка для второго числа
    while (!inputValid) {
        cin >> num2;
        if (cin.fail()) {
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            cout << "Ошибка! Введите число: ";
        } else {
            inputValid = true;
        }
    }

    /******************** Вычисление и вывод результатов ********************/
    // Выводим сумму чисел
    cout << "Сумма: " << num1 + num2 << endl;
    
    // Выводим разность чисел
    cout << "Разность: " << num1 - num2 << endl;
    
    // Выводим произведение чисел
    cout << "Произведение: " << num1 * num2 << endl;

    /******************** Проверка деления на ноль ********************/
    // Перед делением проверяем, не равен ли делитель нулю
    if (num2 != 0) {
        // Если не равен, выводим результат деления
        cout << "Частное: " << num1 / num2 << endl;
    } else {
        // Если равен, выводим сообщение об ошибке
        cout << "Частное: деление на ноль невозможно!" << endl;
    }

    // Завершаем программу
    return 0;
}
